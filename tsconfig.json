{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@gs-squad-mcp/core/config": [ "src/core/config" ],
      "@gs-squad-mcp/core/roles": [ "src/core/roles" ],
      "@gs-squad-mcp/core/prompt": [ "src/core/prompt" ],
      "@gs-squad-mcp/core/engine": [ "src/core/engine" ],
      "@gs-squad-mcp/core/mcp": [ "src/core/mcp" ],
      "@gs-squad-mcp/core/mcp/contracts": [ "src/core/mcp/contracts" ],
      "@gs-squad-mcp/nest": [ "src/nest" ],
      "@gs-squad-mcp/cli": [ "src/cli" ]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [ "src/**/*", "test/**/*", "jest.setup.ts" ],
  "exclude": [ "node_modules", "dist" ]
}

