{
  "mcpProxy": {
    "baseURL": "http://localhost:8084",
    "addr": ":8084",
    "name": "MCP Proxy with PII Redaction",
    "version": "1.0.0",
    "type": "stdio",
    "options": {
      "panicIfInvalid": false,
      "logEnabled": true
    }
  },
  "groups": {
    "frontend-engineer": [
      "proxied-github"
    ]
  },
  "mcpServers": {
    "github": {
      "transportType": "streamable-http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      },
      "options": {
        "toolFilter": {
          "mode": "block",
          "list": [
            "create_repository",
            "create_or_update_file"
          ]
        }
      }
    },
    "github-allow": {
      "transportType": "streamable-http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_TOKEN}"
      },
      "options": {
        "toolFilter": {
          "mode": "allow",
          "list": [
            "list_issues",
            "search_repositories"
          ]
        }
      }
    },
    "atlassian": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote@0.1.17",
        "https://mcp.atlassian.com/v1/sse",
        "51328"
      ],
      "options": {
        "toolFilter": {
          "mode": "block",
          "list": [
            "transitionJiraIssue"
          ]
        },
        "redaction": {
          "enabled": true,
          "keys": ["description", "text", "href"]
        }
      }
    },
    "gcp": {
      "command": "sh",
      "args": ["-c", "npx -y gcp-mcp"],
      "options": {
        "redaction": {
          "enabled": true,
          "keys": ["message", "url", "textPayload", "stackTrace"]
        }
      }
    },
    "pg-mcp-server": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/growthspace-engineering/pg-mcp-server.git",
        "python",
        "-m",
        "server.stdio"
      ],
      "env": {
        "LOG_LEVEL": "DEBUG"
      }
    }
  }
}


